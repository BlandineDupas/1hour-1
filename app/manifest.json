{
  "name": "1hour",
  "version": "1.1",
  "description": "Clean some brain memory, stay focused and stop procrastinating.",
  "permissions": [
    "background",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "declarativeContent",
    "activeTab"
  ],
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "manifest_version": 2,
  "background": {
    "scripts": ["helpers/Storage.js", "helpers/DateHelper.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
